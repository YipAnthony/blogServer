<% include ../partials/topBar %>

<form action="" method="post" autocomplete="off">
    <label for="title">Title</label>
    <input id="title" name="title" type="text" value="<%= blog.title %> "> <br>

    <label for="content">Content</label>
    <textarea id="content" name="content"><%= blog.content %></textarea>
     <br>
    <button name="published" value="false" class="btn btn-warning" type="submit">Save as unpublished</button>
    <button name="published" value="true" class="btn btn-primary" type="submit">Post</button>
</form>